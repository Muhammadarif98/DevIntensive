<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/grey"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Рейтинг"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal_16"
                    android:layout_marginBottom="@dimen/spacing_normal_16"
                    android:background="@color/white">

                </View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Написано строк кода"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal_16"
                    android:layout_marginBottom="@dimen/spacing_normal_16"
                    android:background="@color/white">

                </View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Проектов"
                        android:textColor="@color/white"
                        android:textSize="12sp">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:src="@drawable/ic_baseline_call_24" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_marginStart="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginEnd="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/phone"
                            android:inputType="phone"
                            android:text="+7(988)788-79-93"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey">

                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:src="@drawable/ic_baseline_phone_in_talk_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="@dimen/spacing_larger_72"
                android:background="@color/grey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:src="@drawable/ic_baseline_email_24" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_marginStart="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginEnd="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/email_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="@string/e_mail"
                            android:inputType="textEmailAddress"
                            android:text="marip55598@gmail.com"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey">

                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:src="@drawable/ic_baseline_send_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="@dimen/spacing_larger_72"
                android:background="@color/grey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:src="@drawable/ic_vk_round" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_marginStart="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginEnd="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/vk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="Профиль в VK"
                            android:inputType="textEmailAddress"
                            android:text="vk.com"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey">

                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:src="@drawable/ic_oojs_ui_icon_eye" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="@dimen/spacing_larger_72"
                android:background="@color/grey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:src="@drawable/ic_github" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_big_72"
                    android:layout_marginStart="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginEnd="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/github"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="Репозиторий"
                            android:inputType="textEmailAddress"
                            android:text="github.com/Aarif98/DevIntensive"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey">

                        </EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:layout_marginRight="@dimen/spacing_medium_32"
                    android:src="@drawable/ic_oojs_ui_icon_eye" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="@dimen/spacing_larger_72"
                android:background="@color/grey">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small_8"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_small_24"
                    android:layout_height="@dimen/size_small_24"
                    android:layout_marginLeft="@dimen/spacing_normal_16"
                    android:layout_marginTop="@dimen/spacing_medial_24"
                    android:src="@drawable/ic_account" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium_32"
                    android:layout_marginLeft="@dimen/spacing_medium_32"
                    android:layout_marginEnd="@dimen/spacing_normal_16"
                    android:layout_marginRight="@dimen/spacing_normal_16"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/osebe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:enabled="false"
                            android:focusable="false"
                            android:gravity="start"
                            android:hint="О себе"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small_8"
                            android:text="@string/decdription"
                            android:textColor="@color/black">

                        </TextView>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>